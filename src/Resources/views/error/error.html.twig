{% extends 'AdminLteBundle::base.html.twig' %}

{% block body %}
    <div class="error-page">
        <h2 class="headline text-red">500</h2>

        <div class="error-content">
            <h3><i class="fa fa-warning text-red"></i>{% block title %} Oops! Something went wrong.{% endblock title %}</h3>

            <p>{% block text %}
                We will work on fixing that right away.
                Meanwhile, you may <a href="{% block uri_home %}/{% endblock %}">return to dashboard</a> or try using the search form.
            </p>{% endblock %}

        </div>
    </div>
{% endblock body %}
